{
    "name": "contactjavas/modern-wpcs-standard",
    "description": "A set of phpcs sniffs for modern php development.",
    "type": "phpcodesniffer-standard",
    "keywords" : [ "phpcs", "static analysis" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Payton Swick",
            "email": "payton@foolord.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox",
        "lint": "./vendor/bin/phpcs ModernWpcsStandard"
    },
    "support"    : {
        "issues": "https://github.com/contactjavas/modern-wpcs-standard/issues",
        "wiki"  : "https://github.com/contactjavas/modern-wpcs-standard/wiki",
        "source": "https://github.com/contactjavas/modern-wpcs-standard"
    },
    "config": {
        "sort-order": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "ModernWpcsStandard\\": "ModernWpcsStandard/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ModernWpcsStandard\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.0 || ^8.0",
        "squizlabs/php_codesniffer": "^3.7.2"
    },
    "require-dev": {
        "sirbrillig/phpcs-variable-analysis": "^2.11.17",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4 || ^0.5 || ^0.6 || ^0.7 || ^1.0",
        "phpunit/phpunit": "^5.0 || ^6.5 || ^7.0 || ^8.0 || ^9.0 || ^10.0"
    }
}
